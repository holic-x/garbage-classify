<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--TOP菜单 stat-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_margin"
            android:layout_marginTop="@dimen/nav_spacing_4dp"
            android:layout_marginRight="@dimen/activity_margin"
            android:layout_marginBottom="@dimen/nav_spacing_4dp"
            android:clickable="true"
            android:orientation="horizontal">

            <LinearLayout style="@style/ItemContainerLargeV">

                <SearchView
                    android:id="@+id/searchViewBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="InvalidId" />

            </LinearLayout>

        </LinearLayout>

        <include layout="@layout/divider_large" />

    </LinearLayout>
    <!--TOP菜单 end-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/home_top_fill"
            android:layout_marginLeft="@dimen/activity_margin"
            android:layout_marginRight="@dimen/activity_margin"
            android:clickable="true"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/label01"
                style="@style/ItemContainerLargeV">

                <TextView
                    style="@style/ItemTextSmall"
                    android:text="@string/recycled_rubbish" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/label02"
                style="@style/ItemContainerLargeV">

                <TextView
                    style="@style/ItemTextSmall"
                    android:text="@string/harmful_rubbish" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/label03"
                style="@style/ItemContainerLargeV">

                <TextView
                    style="@style/ItemTextSmall"
                    android:text="@string/kitchen_waste_rubbish" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/label04"
                style="@style/ItemContainerLargeV">

                <TextView
                    style="@style/ItemTextSmall"
                    android:text="@string/other_rubbish" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/home_top_fill"
            android:layout_marginLeft="@dimen/activity_margin"
            android:layout_marginRight="@dimen/activity_margin"
            android:clickable="true"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/label05"
                style="@style/ItemContainerLargeV">

                <TextView
                    style="@style/ItemTextSmall"
                    android:text="@string/recycled_rubbish" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/label06"
                style="@style/ItemContainerLargeV">

                <TextView
                    style="@style/ItemTextSmall"
                    android:text="@string/harmful_rubbish" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/label07"
                style="@style/ItemContainerLargeV">

                <TextView
                    style="@style/ItemTextSmall"
                    android:text="@string/kitchen_waste_rubbish" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/label08"
                style="@style/ItemContainerLargeV">

                <TextView
                    style="@style/ItemTextSmall"
                    android:text="@string/other_rubbish" />
            </LinearLayout>

        </LinearLayout>

        <include layout="@layout/divider_large" />

    </LinearLayout>

    <include layout="@layout/divider_large" />

    <ListView
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true" />

