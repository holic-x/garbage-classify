<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--TOP菜单 stat-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_margin"
            android:layout_marginTop="@dimen/nav_spacing_4dp"
            android:layout_marginRight="@dimen/activity_margin"
            android:layout_marginBottom="@dimen/nav_spacing_4dp"
            android:clickable="true"
            android:orientation="horizontal">

            <LinearLayout style="@style/ItemContainerLargeV">


                <com.rc.view.FontIconView
                    style="@style/ItemMenuIconSmall"
                    android:text="@string/fi_home_station_alms"
                    android:textColor="@color/colorIcon_styl_01" />

                <TextView
                    style="@style/ItemTextSmall"
                    android:layout_gravity="center"
                    android:text="@string/home_station_alms" />

                <TextView
                    android:id="@+id/alarms_num"
                    style="@style/ItemTextSmall"
                    android:layout_gravity="center"
                    android:text="30"
                    android:textColor="@color/main_color" />

            </LinearLayout>

            <LinearLayout style="@style/ItemContainerLargeV">

                <com.rc.view.FontIconView
                    style="@style/ItemMenuIconSmall"
                    android:text="@string/fi_home_station_order"
                    android:textColor="@color/colorIcon_styl_01" />

                <TextView
                    style="@style/ItemTextSmall"
                    android:layout_gravity="center"
                    android:text="@string/home_station_order" />

                <TextView
                    android:id="@+id/orders_num"
                    style="@style/ItemTextSmall"
                    android:layout_gravity="center"
                    android:text="3"
                    android:textColor="@color/main_color" />

            </LinearLayout>

            <LinearLayout style="@style/ItemContainerLargeV">

                <com.rc.view.FontIconView
                    style="@style/ItemMenuIconSmall"
                    android:text="@string/fi_home_station_num"
                    android:textColor="@color/colorIcon_styl_01" />

                <TextView
                    style="@style/ItemTextSmall"
                    android:layout_gravity="center"
                    android:text="@string/home_station_num" />

                <TextView
                    android:id="@+id/stations_num"
                    style="@style/ItemTextSmall"
                    android:layout_gravity="center"
                    android:text="6"
                    android:textColor="@color/main_color" />

            </LinearLayout>

        </LinearLayout>

        <include layout="@layout/divider_large" />

    </LinearLayout>
    <!--TOP菜单 end-->

    <!--菜单 start-->

    <LinearLayout
        android:layout_width="match_parent"
