                    style="@style/ItemMenuIcon"
                    android:text="@string/fi_home_more"
                    android:textColor="@color/text_grey" />

                <TextView
                    style="@style/ItemTextSmall"
                    android:text="@string/other_rubbish" />
            </LinearLayout>

        </LinearLayout>


        <include layout="@layout/divider_large" />

